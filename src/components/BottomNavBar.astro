<style lang="postcss">
  /* Стили для ссылок навигации */
  .nav-item {
    @apply flex flex-col items-center justify-center p-2 text-gray-400 text-xs font-medium transition-colors duration-200 ease-in-out relative;
  }
  /* Стиль для активной ссылки */
  .nav-item.active {
    @apply text-cyan-400;
  }
  .nav-item i {
    @apply text-lg mb-1;
  }
  .nav-item.active i {
    @apply text-cyan-400;
  }

  /* Стиль для центральной кнопки */
  .main-cta-btn {
    @apply w-16 h-16 rounded-full bg-gradient-to-br from-cyan-500 to-fuchsia-600 text-white flex items-center justify-center;
    @apply transition-all duration-300 ease-in-out transform hover:scale-110;
  }

  .main-cta-btn span {
    font-size: 11px; /* Делаем шрифт чуть меньше стандартного */
    line-height: 1;  /* Убираем лишнюю высоту строки для компактности */
  }
</style>
