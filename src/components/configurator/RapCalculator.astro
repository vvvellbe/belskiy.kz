                <div id="rap-package-info" class="mb-6"></div>
                <div class="flex items-center gap-4 mb-6">
                    <button id="select-all-tracks-btn" class="btn-secondary flex-1 py-2 px-3 rounded-lg">Выбрать все</button>
                    <button id="reset-tracks-btn" class="btn-reset flex-1 py-2 px-3 rounded-lg">Сбросить</button>
