        <div class="hidden md:flex items-center" id="desktop-menu-container">
            <div id="desktop-menu-links" class="flex items-center transition-all duration-300 ease-out">
                {navLinks.map(link => (
                    <a
                        href={homeUrl ? link.href : (link.href.startsWith('#') ? `/${link.href}` : link.href)}
                        class:list={[
