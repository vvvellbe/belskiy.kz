---
// src/components/ServicePackages.astro
import { PACKAGES } from "../scripts/configurator-data.js";
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8 max-w-6xl mx-auto">
    {
        Object.values(PACKAGES).map((pkg) => (
            <div
                class={`package-card relative flex flex-col p-6 rounded-2xl border ${pkg.id === "standard" ? "border-cyan-500/50 bg-slate-800/60 shadow-[0_0_30px_rgba(0,255,255,0.1)]" : "border-gray-700 bg-slate-900/40"} backdrop-blur-md transition-transform duration-300 hover:-translate-y-2`}
            >
                {pkg.id === "standard" && (
                    <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-cyan-500 text-slate-900 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider shadow-lg">
                        Хит продаж
                    </div>
                )}

                <div class="text-center mb-6">
                    <h3 class="text-2xl font-bold text-white mb-2 font-jost">
                        {pkg.name}
                    </h3>
                    <div class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-purple-400 mb-2">
                        {pkg.price.toLocaleString("ru-RU")} ₸
                    </div>
                    <p class="text-sm text-gray-400 min-h-[40px]">
                        {pkg.description}
                    </p>
                </div>

                <div class="mb-8 flex-grow flex flex-col">
                    <ul class="space-y-3">
                        {pkg.features.map((feature) => (
                            <li class="flex items-start text-gray-300 text-sm leading-relaxed">
                                <i class="fas fa-check text-cyan-400 mt-1 mr-3 flex-shrink-0" />
                                <span>{feature}</span>
                            </li>
                        ))}
                    </ul>

                    {pkg.note && (
                        <div class="mt-4 pt-4 border-t border-gray-700/50">
                            <p class="text-xs text-amber-400 flex items-start font-medium leading-relaxed">
                                <i class="fas fa-info-circle mt-0.5 mr-2 flex-shrink-0" />
                                {pkg.note}
                            </p>
                        </div>
                    )}
                </div>

                <div class="mt-auto">
                    <button
                        data-package-id={pkg.id}
                        type="button"
                        class="block w-full py-3 px-6 text-center rounded-lg font-bold transition-all duration-300 bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-500 hover:to-blue-500 text-white shadow-lg hover:shadow-cyan-500/30"
                    >
                        Заказать
                    </button>
                </div>
            </div>
        ))
    }
</div>
